        "workspace": "workspaces/amora",
        "agentDir": "workspaces/amora",
        "sandbox": false,
        "isDefault": true,
        "heartbeat": "30min",
        "triggers": ["telegram_hq", "telegram_dm"],
        "subagents": {
          "allowAgents": ["planner", "orchestrator", "dev", "qa", "scraper", "content"]
